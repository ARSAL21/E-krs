<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header dengan ikon -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_lock_lock"
                android:tint="#2196F3"
                android:layout_marginEnd="12dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Verifikasi Identitas Mahasiswa"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#212121"/>
        </LinearLayout>

        <!-- Pesan peringatan -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFF3E0"
            android:padding="16dp"
            android:layout_marginBottom="24dp"
            android:gravity="center_vertical"
            android:elevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_dialog_info"
                    android:tint="#FF9800"
                    android:layout_marginEnd="12dp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="PERHATIAN PENTING"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#5D4037"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Verifikasi hanya dapat dilakukan SEKALI\n• Pastikan NIM dan Nama sesuai dengan data akademik\n• Data tidak dapat diubah setelah diverifikasi\n• Hubungi admin jika terjadi kesalahan"
                android:textSize="13sp"
                android:textColor="#5D4037"
                android:lineSpacingExtra="6dp"/>
        </LinearLayout>

        <!-- Form Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="20dp"
            android:layout_marginBottom="24dp"
            android:elevation="2dp">

            <!-- Field NIM -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nomor Induk Mahasiswa (NIM)"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@android:drawable/editbox_background"
                android:padding="12dp"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_menu_agenda"
                    android:tint="#2196F3"
                    android:layout_marginEnd="12dp"/>

                <EditText
                    android:id="@+id/etNim"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="number"
                    android:maxLength="15"
                    android:singleLine="true"
                    android:textSize="16sp"
                    android:background="@null"
                    android:hint="Contoh: 202131150"
                    android:padding="0dp"/>
            </LinearLayout>

            <!-- Field Nama -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama Lengkap"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@android:drawable/editbox_background"
                android:padding="12dp"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_menu_my_calendar"
                    android:tint="#2196F3"
                    android:layout_marginEnd="12dp"/>

                <EditText
                    android:id="@+id/etNama"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="textCapWords"
                    android:singleLine="true"
                    android:textSize="16sp"
                    android:background="@null"
                    android:hint="Contoh: Ahmad Budiman"
                    android:padding="0dp"/>
            </LinearLayout>

            <!-- Petunjuk format -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Format yang benar:\n• Gunakan huruf kapital di awal setiap kata\n• Tanpa gelar akademik\n• Sesuai dengan KTM atau transkrip nilai"
                android:textSize="12sp"
                android:textColor="#757575"
                android:lineSpacingExtra="4dp"/>

        </LinearLayout>

        <!-- Status verifikasi -->
        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status: BELUM DIVERIFIKASI"
            android:textSize="14sp"
            android:textColor="#F44336"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp"
            android:background="#FFEBEE"
            android:padding="12dp"/>

        <!-- Tombol verifikasi -->
        <Button
            android:id="@+id/btnVerify"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="VERIFIKASI SEKARANG"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:background="#2196F3"
            android:textColor="@android:color/white"
            android:drawableStart="@android:drawable/ic_lock_lock"
            android:drawableTint="@android:color/white"
            android:drawablePadding="8dp"/>

        <!-- Footer note -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pastikan data sudah benar sebelum mengklik tombol verifikasi."
            android:textSize="12sp"
            android:textColor="#9E9E9E"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:lineSpacingExtra="4dp"/>

    </LinearLayout>
</ScrollView>