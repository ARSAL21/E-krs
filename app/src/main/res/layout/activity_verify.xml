<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="24dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Header dengan ikon -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_lock_lock"
            android:tint="#2196F3"
            android:layout_marginEnd="12dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Verifikasi Identitas Mahasiswa"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#212121"/>
    </LinearLayout>

    <!-- Pesan peringatan -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:cardBackgroundColor="#FFF3E0"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@android:drawable/ic_dialog_info"
                android:tint="#FF9800"
                android:layout_marginEnd="12dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Verifikasi hanya dapat dilakukan sekali. Pastikan NIM dan Nama yang dimasukkan sesuai dengan data akademik Anda."
                android:textSize="14sp"
                android:textColor="#5D4037"
                android:lineSpacingExtra="4dp"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Form Container -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        android:layout_marginBottom="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Field NIM -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/nimContainer"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:boxStrokeColor="#2196F3"
                app:endIconMode="custom"
                app:endIconDrawable="@android:drawable/ic_menu_edit"
                app:hint="Nomor Induk Mahasiswa (NIM)"
                app:startIconDrawable="@android:drawable/ic_menu_agenda"
                app:startIconTint="#2196F3">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etNim"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLength="15"
                    android:singleLine="true"
                    android:textSize="16sp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Field Nama -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/namaContainer"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:boxStrokeColor="#2196F3"
                app:endIconMode="custom"
                app:endIconDrawable="@android:drawable/ic_menu_edit"
                app:hint="Nama Lengkap"
                app:startIconDrawable="@android:drawable/ic_person"
                app:startIconTint="#2196F3">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etNama"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapWords"
                    android:singleLine="true"
                    android:textSize="16sp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Petunjuk tambahan -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Gunakan huruf kapital di awal setiap kata\n• Pastikan sesuai dengan KTM atau transkrip"
                android:textSize="12sp"
                android:textColor="#757575"
                android:lineSpacingExtra="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginStart="8dp"/>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Status verifikasi -->
    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Status: Belum terverifikasi"
        android:textSize="14sp"
        android:textColor="#F44336"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="24dp"
        android:gravity="center"/>

    <!-- Tombol verifikasi -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnVerify"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="VERIFIKASI SEKARANG"
        android:textSize="16sp"
        android:textStyle="bold"
        app:icon="@android:drawable/ic_lock_lock"
        app:iconGravity="textStart"
        app:iconPadding="8dp"
        app:iconTint="@android:color/white"
        app:cornerRadius="12dp"
        android:backgroundTint="#2196F3"
        android:layout_marginTop="8dp"/>

    <!-- Footer note -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Setelah diverifikasi, data tidak dapat diubah. Hubungi admin jika terjadi kesalahan."
        android:textSize="12sp"
        android:textColor="#9E9E9E"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:lineSpacingExtra="4dp"/>

</LinearLayout>